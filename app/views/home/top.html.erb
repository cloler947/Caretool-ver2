

<div class="clearfix">
  <div class="main-visual"><div class="App-name">Care tool</div></div>
</div>


<h2 style="text-align: center;">いいねランキング</h2>
<div class="ranking">
    <% @posts.each.with_index(1) do |post, i| %>
      <div class="rank-item">
        <div class="ranking-num"><%= "#{i}位"%></div>
        <div class="rank-image"><%= attachment_image_tag(post, :image, :fill, 250, 250, fallback: "写真のフリー素材11.jpeg", size: "250x250") %></div>
        <div class="rank-title"><strong><%= link_to post.title , post_path(post.id) %></strong></div>
        <div class="rank-info">作者<%= post.user.name %></div>
        <div class="rank-info"><%= icon('far', 'comment-dots')%><%= post.post_comments.count %></div>
        <div class="rank-info"><%= icon('fas', 'heart') %><%= post.favorites.count %></div>
      </div>
    <% end %>
</div>