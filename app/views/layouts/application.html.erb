<!DOCTYPE html>
<html>
  <head>
    <title>Caretool</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar-fixed-top">
      <nav class="navbar navbar-default" style="background-color: #009933">
        <ul class="nav navbar-nav navbar-right">
          <li class="search-form">
            <%= search_form_for @search do |f| %>
              <%= f.search_field :title_or_body_or_user_name_cont, placeholder: "キーワードを入力" %>

              <%= f.submit "検索" %>
            <% end %>
          </li>

          <% if user_signed_in? %>
            <li>
              <%= link_to "トップページ", home_top_path %>
            </li>
            <li>
              <%= link_to "マイページ", user_path(current_user) %>
            </li>
            <li>
              <%= link_to "記事一覧", posts_path %>
            </li>
            <li class="header-padding">
              <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "アバウト", root_path %>
            </li>
            <li>
              <%= link_to "記事一覧", posts_path %>
            </li>
            <li>
              <%= link_to "ログイン", new_user_session_path %>
            </li>
            <li>
              <%= link_to "会員登録", new_user_registration_path %>
            </li>
          <% end %>
        </ul>
      </nav>
    </header>

    <div class="container">
      <%= yield %>
    </div>

    <footer>
      <div class="container">
        <div class="row">
          <span><%= link_to "トップページ", home_top_path %></span>
        </div>
      </div>
    </footer>
  </body>
</html>
