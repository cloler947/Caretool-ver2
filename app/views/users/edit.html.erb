<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="title-edit">登録情報変更</h1>

      <%= form_for(@user) do |f| %>
        <%= render "layouts/errors", obj: @user %>

        <table style="border-collapse: separate; border-spacing: 10px 20px; font-size: 20px;">
           <tbody>
             <tr>
               <td><%= f.label :name %></td>
               <td><%= f.text_field :name , class: "col-sm-10" %></td>
             </tr>
             <tr>
               <td><%= f.label :email %></td>
               <td><%= f.email_field :email , class: "col-sm-10" %></td>
             </tr>
             <tr>
                <td><%= f.label :pro_image %></td>
                <td><%= f.attachment_field :pro_image %></td>
             </tr>
             
           </tbody>
          </table>

          <div class="action"><%= f.submit "変更する" , class: "btn btn-primary col-sm-10 center-block" %></div>
      <% end %>
    </div>
  </div>
</div>