
<div class="row">
  <div class="col-md-offset-3 col-md-6">
      <div class="box">
        <h2 class="app_title"><strong>Caretool</strong></h2>
      

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form-horizontal"}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.label :email , class: "col-sm-4 control-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "col-sm-8" %>
        </div>

        <div class="form-group">
          <%= f.label :name, class: "col-sm-4 control-label" %>
          <%= f.text_field :name, class: "col-sm-8" %>
        </div>

        <div class="form-group">
          <%= f.label :password , class: "col-sm-4 control-label" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-sm-8" %>
          <% if @minimum_password_length %>
            <span id="helpBlock" class="help-block"><%= @minimum_password_length %> 文字以上の半角英数で入力して下さい。</span>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-sm-4 control-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" , class: "col-sm-8" %>
          <span id="helpBlock" class="help-block">確認のため、パスワードを再入力して下さい。</span>
        </div>

        <div class="actions">
          <%= f.submit "会員登録" , class: "btn btn-primary center-block" %>
        </div>
      <% end %>

      </div>
  </div>
</div>
